<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 主圆形 -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#00A5C4" />
            <solid android:color="#CC1A1A1A" />
        </shape>
    </item>
    
    <!-- 上方短线 -->
    <item
        android:left="18dp"
        android:right="18dp"
        android:top="0dp"
        android:bottom="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#00A5C4" />
        </shape>
    </item>
    
    <!-- 下方短线 -->
    <item
        android:left="18dp"
        android:right="18dp"
        android:top="32dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#00A5C4" />
        </shape>
    </item>
    
    <!-- 左边短线 -->
    <item
        android:left="0dp"
        android:right="32dp"
        android:top="18dp"
        android:bottom="18dp">
        <shape android:shape="rectangle">
            <solid android:color="#00A5C4" />
        </shape>
    </item>
    
    <!-- 右边短线 -->
    <item
        android:left="32dp"
        android:right="0dp"
        android:top="18dp"
        android:bottom="18dp">
        <shape android:shape="rectangle">
            <solid android:color="#00A5C4" />
        </shape>
    </item>

</layer-list>
